#: include loopWidget.kv

<MainScreen>:
    md_bg_color: '#F3F3F3'
    MDBoxLayout:
        orientation: 'vertical'
        TopBar:
        ScrollViewMain:
            id: scroll
        BottomNavigation:
            id: bottom


<TopBar>
    md_bg_color: '#F3F3F3'
    specific_text_color: '#333333'
    left_action_items: [["menu", lambda x: app.navigation_draw()]]
    right_action_items:
        [
        ["white-balance-sunny", lambda x: app.change_theme_dark()],
        ["account-circle-outline", lambda x: app.sign_in()]
        ]


<ScrollViewMain>
    MDBoxLayout:
        orientation: 'vertical'
        padding: self.width / 20
        spacing: self.width / 40
        adaptive_height: True
        md_bg_color: '#F3F3F3'

        MDBoxLayout:
            adaptive_height: True
            padding: 0, 0, 0, self.width / 25
######################################## 1 WIDGET ########################################

            MDWidget:
                size_hint_y: None
                height: root.width / 1.5
                radius: [self.width / 15]

                FitImage:
                    source: 'size200_3.jpeg'
                    size: self.parent.size
                    pos: self.parent.pos
                    radius: [self.width / 15]

                MDFlatButton:
                    pos: self.parent.pos
                    size: self.parent.size
                    md_bg_color: 0, 0, 0, 0.3
                    radius: [self.width / 15]

                MDStackLayout:
                    pos: self.parent.pos
                    size: self.parent.size
                    orientation: 'lr-bt'

                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: (1, 0.2)
                        spacing: self.width / 20
                        padding: self.width / 20, 0, self.width / 30, self.width / 10
                        MDLabel:
                            text: 'Cats'
                            font_size: self.width / 13
                            padding: self.width / 15, 0, 0, self.width / 8
                        MDLabel:
                            text: app.shorten_text('Cats, also known as domestic cats, are small carnivorous mammals that are popular pets around the world. They are known for their playful and independent nature. Cats have been kept as companions for thousands of years, and they come in a variety of breeds, each with its own unique characteristics.', 115)
                            color: '#737373'
                            font_size: self.width / 23

                MDRelativeLayout:
                    size: self.parent.size
                    pos: self.parent.pos
                    MDRelativeLayout:
                        size_hint: (0.117, 0.15)
                        pos_hint: {'x': 0.84, 'y': 0.8}
                        radius: [self.width / 4]
                        md_bg_color: '#217074'

                        MDLabel:
                            text: 'EN'
                            font_size: self.parent.width / 3
                            halign: 'center'
                            color: '#F3F3F3'

        MDBoxLayout:
            id: box
            orientation: 'vertical'
            adaptive_height: True
            spacing: self.width / 20


<BottomNavigation>
    size_hint: (1, 0.07)
    panel_color: '#217074'
    use_text: False
    text_color_normal: '#F3F3F3'
    text_color_active: '#2B2D30'

    MDBottomNavigationItem:
        name: 'screen_1'
        icon: 'account-circle-outline'

    MDBottomNavigationItem:
        name: 'screen_2'
        icon: 'home-outline'

    MDBottomNavigationItem:
        name: 'screen_3'
        icon: 'chat-outline'
