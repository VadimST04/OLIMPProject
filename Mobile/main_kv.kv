MDScreen:
    md_bg_color: '#F3F3F3'
    BoxLayoutMain:
        TopBar:
        ScrollViewMain:
        BottomNavigation:


<BoxLayoutMain>
    orientation: 'vertical'


<TopBar>
    md_bg_color: '#F3F3F3'
    specific_text_color: '#333333'
    left_action_items: [["menu", lambda x: app.navigation_draw()]]
    right_action_items:
        [
        ["white-balance-sunny", lambda x: app.change_theme_dark()],
        ["account-circle-outline", lambda x: app.sign_in()]
        ]


<ScrollViewMain>
    MDBoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: 30
        size_hint_y: None
        height: self.minimum_height
        md_bg_color: '#F3F3F3'
######################################## 1 WIDGET ########################################
        MDWidget:
            size_hint_y: None
            height: root.width / 1.5
            canvas:
                Color:
                    rgb: 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    source: 'size200_3.jpeg'
                    radius: [30, 30, 30, 30]

            MDStackLayout:
                pos: self.parent.pos
                size: self.parent.size
                orientation: 'lr-bt'

                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (1, 0.2)
                    spacing: self.width / 20
                    padding: self.width / 20, 0, self.width / 30, self.width / 10
                    MDLabel:
                        text: 'Cats'
                        font_size: self.width / 13
                        padding: 0, 0, 0, self.width / 8
                    MDLabel:
                        text: app.shorten_text('Cats, also known as domestic cats, are small carnivorous mammals that are popular pets around the world. They are known for their playful and independent nature. Cats have been kept as companions for thousands of years, and they come in a variety of breeds, each with its own unique characteristics.', 115)
                        color: '#737373'
                        font_size: self.width / 23

            MDRelativeLayout:
                size: self.parent.size
                pos: self.parent.pos
                MDRaisedButton:
                    text: 'EN'
                    font_size: 24
                    text_color: '#F3F3F3'
                    md_bg_color: '#217074'
                    elevation: 0
                    size: self.parent.width / 9, self.parent.width / 9
                    pos_hint: {'x': 0.85, 'y': 0.8}
                    border: [10, 10, 10, 10]

######################################## 2 WIDGET ########################################
        MDWidget:
            size_hint_y: None
            height: root.width / 3
            canvas:
                Color:
                    rgb: app.hex_to_rgb('#E1E1E1')
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [30, 30, 30, 30]

            MDBoxLayout:
                pos: self.parent.pos
                width: self.parent.width
                height: self.parent.height

                MDRelativeLayout:
                    size_hint: (0.3, 1)
                    size_hint: None, None
                    width: self.parent.height
                    height: self.parent.height

                    FitImage:
                        source: 'size200_1.jpg'
                        size_hint: (0.8, 0.8)
                        allow_stretch: True
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        radius: 25, 25, 25, 25


                MDRelativeLayout:
                    size_hint: (0.45, 1)
                    MDGridLayout:
                        cols: 1
                        MDLabel:
                            text: 'French Radio Stations'
                            padding: 0, self.width * 0.1, 0, 0
                            size_hint_y: None
                            size: self.texture_size
                            font_size: self.width * 0.1
                        MDLabel:
                            text: app.shorten_text('I would prefer to be able to do this using existing kivy layouts instead of having to write my own layout class to handle I would prefer to be able to do this using existing kivy layouts instead of having to write my own layout class to handle this, but if no other option is possible, this is also ok.', 100)
                            size_hint_y: None
                            font_size: self.width * 0.08
                            padding: 0, self.width * 0.3, 0, self.width * 0.2
                            color: '#737373'


                MDRelativeLayout:
                    size_hint: (0.15, 1)
                    MDRaisedButton:
                        text: 'EN'
                        font_size: 24
                        text_color: '#F3F3F3'
                        md_bg_color: '#217074'
                        elevation: 0
                        size_hint: None, None
                        size: self.parent.width / 1.5, self.parent.width / 1.5
                        pos_hint: {'x': 0.2, 'y': 0.6}
                        radius: [20, 20, 20, 20]

