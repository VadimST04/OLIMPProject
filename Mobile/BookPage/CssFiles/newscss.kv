#include css.kv
#: import NoTransition kivy.uix.screenmanager.NoTransition
<NewsPageWindow>:
    name: 'news1'
    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 'orange'

        TopBar:
            id: top_app_bar
            pos_hint: {'top': 1}
            elevation: 0
            md_bg_color: "#F3F3F3"
            specific_text_color: "#333333"
            left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
        #    app.root.ids.b.ids.ac

            right_action_items:
                [
                ["white-balance-sunny", lambda x: app.change_theme_dark()],
                ["account-circle-outline", lambda x: app.sign_in()]
                ]
        FitImage:
            source: "logom.jpg"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            radius: 36, 36, 0, 0
            size_hint: (0.8, 0.4)
            allow_stretch: True
    BotmBar:
        size_hint: (1, 0.01)
        panel_color: '#217074'
        use_text: False
        text_color_normal: '#F3F3F3'
        text_color_active: '#2B2D30'
        MDBottomNavigationItem:
            icon: 'account-circle-outline'

        MDBottomNavigationItem:
            icon: 'home-outline'
            on_tab_press:
                root.manager.current = 'news1'
        MDBottomNavigationItem:
            icon: 'chat-outline'
            on_tab_press:
                root.manager.transition = NoTransition()
                root.manager.current = 'book1'

    NavDraver:
        id: nav_drawer
        radius: (0, 16, 16, 0)

        MDNavigationDrawerMenu:

            DrawerClickableItem:
                icon: "book"
                text_right_color: "#4a4939"
                text: "BooksPage"
                on_release:
                    root.manager.transition = NoTransition()
                    root.manager.current = 'book1'

            DrawerClickableItem:
                icon: "newspaper"
                text: "NewsPage"