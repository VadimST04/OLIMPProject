<BookPageWindow>:
    name: 'book1'
#    md_bg_color: '#42ffff'
    md_bg_color: app.theme_cls.bg_light
    MDBoxLayout:
#        md_bg_color: '#42ffff'
        padding: 0, self.parent.width / 30, 0, 0
        orientation: 'vertical'
        size_hint: (1, 0.9)

        MDBoxLayout:
            orientation: 'vertical'
#            padding: self.parent.width / 20, 0, self.parent.width / 20, self.parent.width / 40
            padding: self.parent.width / 20 , self.parent.width / 20, self.parent.width / 20, self.parent.width / 30
            size_hint: (1, 0.1)


            MDTextField:
                line_anim: False
                active_line: False
                multiline: False
                mode: 'fill'
                hint_y: self
                radius: [15]
                hint_text: 'Search...'
                animate: False
                hint_text_color_focus: "#217074"
                icon_left: 'magnify'
                icon_left_color_focus: "#217074"

        MDBoxLayout:
            size_hint: (1, 0.08)
            md_bg_color: 'bebebe'
            MDScrollView:
                do_scroll_x: True
                do_scroll_y: False
                bar_width: 0
                MDBoxLayout:
                    md_bg_color: 'bebebe'
                    orientation: 'horizontal'
                    adaptive_width: True
                    spacing: 45
                    padding: [22, 0, 22, 0]
                    MDTextButton:
                        text: 'Recently read'
                    MDTextButton:
                        text: 'Bestsellers'
                    MDTextButton:
                        text: 'English Bestsellers'
                    MDTextButton:
                        text: 'New Books'

     #-------------------------------------------------------
        MDBoxLayout:
            size_hint: (1, 0.85)
            padding: 0, 20, 0, 40
            MDScrollView:
                id: scrollbook
                size: self.size
                adaptive_size: True
                MDGridLayout:
                    cols: 2
                    size_hint_y: None
                    height: self.minimum_height
                    width: self.minimum_width
                    spacing: '20dp'
                    padding: '20dp'
                    MDCard:
                        orientation: 'vertical'

                        size_hint: 1, None
                        height: '180dp'
                        elevation: 0
                        radius: [15]
                        line_color: '#e1e0e0'
                        focus_behavior: True
                        focus_color: "#f8f8f8"
                        MDRelativeLayout:
                            MDFlatButton:
                                size: self.parent.size
                                radius: [15]
                                closing_transition: '20'
                                MDRelativeLayout:
                                    id: imgtitles
                                    padding: '9dp'
                                    FitImage:
                                        source: 'Sphere.png'
                                        size_hint_y: 0.6
                                        pos_hint: {'top': 1}
                                        radius: 10, 10, 10, 10
                                    MDLabel:
                                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                                        text: root.shorten_text('The Sound of Arcane City', 17)
                                        bold: True
                                        halign: 'left'
                    #                                        valign: 'left'
                                        font_size: '14'
                                    MDLabel:
                                        pos_hint:{'center_y': 0.1}

                                        text: 'English'
                                        font_size: '14'
                                    MDLabel:
                                        pos_hint:{'center_y': 0.1, 'center_x':1}
                                        text:root.shorten_text('Otto von Bismark', 9)
                                        font_size: '14'

                    MDCard:
                        orientation: 'vertical'

                        size_hint: 1, None
                        height: '180dp'
                        elevation: 0
                        radius: [15]
                        line_color: '#e1e0e0'
                        focus_behavior: True
                        focus_color: "#f8f8f8"
                        MDRelativeLayout:
                            MDFlatButton:
                                size: self.parent.size
                                radius: [15]
                                closing_transition: '20'
                                MDRelativeLayout:
                                    id: imgtitles
                                    padding: '9dp'
                                    FitImage:
                                        source: 'Sphere.png'
                                        size_hint_y: 0.6
                                        pos_hint: {'top': 1}
                                        radius: 10, 10, 10, 10
                                    MDLabel:
                                        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                                        text: root.shorten_text('The Sound of Arcane City', 17)
                                        bold: True
                                        halign: 'left'
                    #                                        valign: 'left'
                                        font_size: '14'
                                    MDLabel:
                                        pos_hint:{'center_y': 0.1}

                                        text: 'English'
                                        font_size: '14'
                                    MDLabel:
                                        pos_hint:{'center_y': 0.1, 'center_x':1}
                                        text:root.shorten_text('Otto von Bismark', 9)
                                        font_size: '14'













