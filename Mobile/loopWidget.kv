<LoopWidget>:
    size_hint_y: None
    height: self.width / 3
    radius: [self.width / 18]
    md_bg_color: '#E1E1E1'

    MDFlatButton:
        pos: self.parent.pos
        size: self.parent.size
        radius: [self.width / 18]

    MDBoxLayout:
        pos: self.parent.pos
        width: self.parent.width
        height: self.parent.height


        MDRelativeLayout:
            id: relate
            size_hint: (0.3, 1)


        MDRelativeLayout:
            size_hint: (0.45, 1)
            MDGridLayout:
                cols: 1
                MDLabel:
                    id: label_head
                    padding: 0, self.parent.width * 0.07, 0, 0
                    size_hint_y: None
                    size: self.texture_size
                    font_size: self.parent.width * 0.1
                MDLabel:
                    id: label_description
                    size_hint_y: None
                    size: self.texture_size
                    font_size: self.parent.width * 0.08
                    padding: 0, self.parent.width * 0.05, 0, self.parent.width * 0.2
                    color: '#737373'

        MDRelativeLayout:
            size_hint: (0.15, 1)
            MDRelativeLayout:
                size_hint: (0.55, 0.28)
                pos_hint: {'x': 0.28, 'y': 0.65}
                radius: [self.width / 4]
                md_bg_color: '#217074'

                MDLabel:
                    text: 'EN'
                    font_size: self.parent.width / 2.5
                    halign: 'center'
                    color: '#F3F3F3'
